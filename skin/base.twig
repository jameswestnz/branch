<!DOCTYPE html>
<!--[if lt IE 7]><html class="no-js ie ie6 lt-ie9 lt-ie8 lt-ie7" {{site.language_attributes}}> <![endif]-->
<!--[if IE 7]><html class="no-js ie ie7 lt-ie9 lt-ie8" {{site.language_attributes}}> <![endif]-->
<!--[if IE 8]><html class="no-js ie ie8 lt-ie9" {{site.language_attributes}}> <![endif]-->
<!--[if gt IE 8]><!--><html class="no-js" {{site.language_attributes}}> <!--<![endif]-->
	<head>
		<meta charset="{{site.charset}}" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>{{wp_title}}</title>
		
		<link rel="pingback" href="{{site.pingback_url}}" />

		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.6/css/bootstrap.min.css" type="text/css" media="screen" />
	    
		<style>
			body { padding-top: 70px; }
		</style>
		
		{{wp_head()}}
	    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.6/js/bootstrap.min.js"></script>
	
	    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
	    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
	    <!--[if lt IE 9]>
	      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
	      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
	    <![endif]-->
	</head>
    <body class="{{body_class}}" data-template="base.twig">
        {% block header %}
	        <header class="header">
	        	{% include 'parts/header.twig' %}
	        </header>
        {% endblock %}

        <section id="content" role="main" class="container">
        	<div class="row">
        		<div class="{% if get_sidebar('sidebar-primary') %}col-md-8{% else %}col-md-12{% endif %} {{sidebar_class}}">
	                {% block content %}
	                    Sorry, no content
	                {% endblock %}
	            </div>
	            {% if get_sidebar('sidebar-primary') %}
	                <aside class="col-md-4 sidebar">
	                    {{get_sidebar('sidebar-primary')}}
	                </aside>
	            {% endif %}
        	</div>
        </section>

        {% block footer %}
            <footer id="footer">
                {% include 'parts/footer.twig' %}
            </footer>
            {{wp_footer()}}
        {% endblock %}

	    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
	    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    </body>
</html>