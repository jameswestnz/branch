{% extends "tease.twig" %}

{% block content %}
	<div class="col-sm-6 {% if get_sidebar('sidebar-primary') %}col-md-6 col-lg-4{% else %}col-md-4 col-lg-3{% endif %}">
		<div class="thumbnail">
			<a href="{{post.link}}">
			{% if post.thumbnail.src %}
				<img src="{{post.thumbnail.src}}" alt="Image: {{post.title}}" class="img-responsive center-block">
			{% else %}
				<img src="http://placehold.it/350&text={{post.title}}" alt="Image: {{post.title}}" class="img-responsive center-block">
			{% endif %}
			</a>
			
			<div class="caption">
				<h2><a href="{{post.link}}">{{post.title}}</a></h2>
				<p>{{post.get_preview(25)}}</p>
				<p><a href="{{post.link}}" class="btn btn-primary" role="button">{{__('Read more')}}</a></p>
			</div>
		</div>
	</div>
{% endblock %}